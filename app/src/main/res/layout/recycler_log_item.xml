<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/activity_padding"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="@dimen/card_view_card_corner_radius"
        card_view:contentPadding="@dimen/card_view_content_padding"
        card_view:cardElevation="@dimen/card_view_card_elevation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="@dimen/card_view_card_button_size"
                android:layout_height="@dimen/card_view_card_button_size"
                android:layout_margin="@dimen/view_margin"
                android:id="@+id/image_button_log"
                android:background="@color/color_primary"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/view_horizontal_margin"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Small Text"
                android:id="@+id/text_view_log"
                android:gravity="center_vertical" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
